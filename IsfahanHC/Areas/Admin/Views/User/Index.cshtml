@model IEnumerable<IsfahanHC.Models.ViewModels.User.UserViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>کاربران</h1>

<p class="btn-group btn-block">
    <a class="btn btn-outline-info"
       asp-action="Add"
       asp-controller="User"
       asp-area="Admin">افزودن</a>
</p>
<p>
    <div class="btn-group btn-block">
        <a class="btn btn-outline-primary"
           asp-route-filter="admins"
           asp-action="Filter"
           asp-controller="User"
           asp-area="Admin">ادمین ها</a>

        <a class="btn btn-outline-info"
           asp-route-filter="sellers"
           asp-action="Filter"
           asp-controller="User"
           asp-area="Admin">فروشندگان</a>
        <a class="btn btn-outline-secondary"
           asp-route-filter="users"
           asp-action="Filter"
           asp-controller="User"
           asp-area="Admin">دیگر کاربران </a>
    </div>
</p>
<table class="table table-striped">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAdmin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsSeller)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegisterTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAdmin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsSeller)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegisterTime)
                </td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-outline-primary"
                           asp-action="Edit"
                           asp-controller="User"
                           asp-area="Admin"
                           asp-route-userName="@item.UserName">ویرایش</a>
                        <a class="btn btn-outline-danger"
                           asp-action="RemoveUser"
                           asp-controller="User"
                           asp-area="Admin"
                           asp-route-userName="@item.UserName">حذف</a>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
