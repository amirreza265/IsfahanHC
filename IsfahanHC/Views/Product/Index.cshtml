@model IsfahanHC.Models.ViewModels.ShowProductViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isActive = true;
}

<div class="col-3">
</div>
<div class="col-9">
    <h1>مشخصات محصول @Model.Name</h1>

    <div class="card col-12">
        <div id="carouselExampleControls" class="carousel slide border-dark" data-ride="carousel">
            <div class="carousel-inner">
                @foreach (var imageName in Model.ImagesFileName)
                {
                    @if (isActive)
                    {
                        <div class="carousel-item  active">

                            <img class="d-block w-100" src="/img/Products/p@(Model.ProductId)/@(imageName)" alt="First slide">
                        </div>

                        @(isActive = false)
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/img/Products/p@(Model.ProductId)/@(imageName)" alt="First slide">
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <a asp-controller="Stor" asp-action="Stor" asp-route-productId="@Model.ProductId">
                <h6 class="card-subtitle mb-2 text-muted">@Model.StorName</h6>
            </a>
            <p class="card-text">@Model.Description</p>
            <p class="card-text">قیمت کالا : @Model.Price</p>
        </div>

        <a asp-action="AddToCart"
           asp-controller="Cart"
           asp-route-productId="@Model.ProductId"
           class="btn btn-success btn-block">افزودن به سبد خرید</a>
    </div>
</div>
