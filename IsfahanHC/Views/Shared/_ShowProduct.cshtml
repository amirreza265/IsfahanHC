@model ShowProductViewModel

@{
    bool isActive = true;
}

<div class="card  col-lg-4 col-md-6 col-sm-12">
    @*carousel*@
    <div class="card-header">
        <div id="carouselExampleControls" class="carousel slide border-dark card-img-top" data-ride="carousel">
            <div class="carousel-inner">
                @foreach (var imageName in Model.ImagesFileName)
                {
                    @if (isActive)
                    {
                        <div class="carousel-item  active">

                            <img class="d-block w-100" src="/img/Products/p@(Model.ProductId)/@(imageName)" alt="@imageName">
                        </div>

                        @(isActive = false)
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/img/Products/p@(Model.ProductId)/@(imageName)" alt="@imageName">
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>
    <a asp-action="Index" asp-controller="Product" asp-route-id="@Model.ProductId" asp-route-name="@Model.Name.Trim().Replace(" ","-")">
        <div class="card-body text-wrap">
            <h5 class="card-title">@Model.Name</h5>
            @if (Model.Description.Length > 50)
            {
                <p class="card-text">
                    @Model.Description.Substring(0, 50)...
                </p>
            }
            else
            {
                @Model.Description
            }
        </div>
    </a>
</div>

